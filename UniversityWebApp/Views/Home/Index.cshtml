
@{
    ViewBag.Title = "Index";
}
@section Stylesheets {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

}
<h2>Index</h2>

You are signed with: @HttpContext.Current.User.Identity.Name

@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("RegisterStudent", "Home", FormMethod.Get, new { id = "studentRegistrationForm" }))
    {
        <a href="javascript:document.getElementById('studentRegistrationForm').submit()">Student Registration</a>
    }
    using (Html.BeginForm("Logout", "User", FormMethod.Post, new { id = "logoutForm" }))
    {
        <a href="javascript:document.getElementById('logoutForm').submit()">Logout</a>
    }

}

